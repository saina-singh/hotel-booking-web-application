__pycache__/
*.py[cod]
*.pyo
*.pyd
*.egg-info/
dist/
build/
.venv/
venv/
env/
pip-wheel-metadata/
.pytest_cache/
.mypy_cache/

# Flask
instance/
*.log

# OS / Editor
.DS_Store
Thumbs.db
.vscode/
.idea/

# Node (if you have frontend tooling)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
EOF
